        <Button x:Name="btnCalculate" Content="คำนวณ" HorizontalAlignment="Center" Margin="0,150,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.454,0.703" Width="290" Height="29" Background="#FF66B16B" Click="btnCalculate_Click"/>
        <TextBox x:Name="txtboxDay" IsReadOnly = "True" HorizontalAlignment="Left" Margin="134,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" FontSize="16" Foreground="Red" Background="#FFE4E4E4"/>
